<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    >
   <Button
       android:id="@+id/toast"
       android:textSize="20sp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="toast"
       />
   <Button
       android:id="@+id/toast_view"
       android:textSize="20sp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="toast_view"
       />
   <Button
       android:id="@+id/window_application_type"
       android:textSize="20sp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="window_application_type"
       />
   <Button
       android:id="@+id/window_toast_type"
       android:textSize="20sp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="window_toast_type"
       />
   <Button
       android:id="@+id/window_alert_type"
       android:textSize="20sp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="window_alert_type"/>
</LinearLayout>